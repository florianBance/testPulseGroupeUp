{{ form_start(contactForm, {'attr': {'novalidate':'novalidate'}}) }}

<div class="formContainer">
    <div class="form-group">
        {{ form_label(contactForm.email, "Email"|trans,{'label_attr': {'class': 'label'}}) }}
        {{ form_errors(contactForm.email) }}
        {{ form_widget(contactForm.email, {'attr': {'class': 'form-control-lg form-control mb-3'}}) }}
        {{ form_help(contactForm.email) }}
    </div>
    <div class="form-group">
        {{ form_label(contactForm.firstName, "Pr√©nom"|trans,{'label_attr': {'class': 'label'}}) }}
        {{ form_errors(contactForm.firstName) }}
        {{ form_widget(contactForm.firstName, {'attr': {'class': 'form-control-lg form-control mb-3'}}) }}
        {{ form_help(contactForm.firstName) }}
    </div>
    <div class="form-group">
        {{ form_label(contactForm.lastName, "Nom"|trans,{'label_attr': {'class': 'label'}}) }}
        {{ form_errors(contactForm.lastName) }}
        {{ form_widget(contactForm.lastName, {'attr': {'class': 'form-control-lg form-control mb-3'}}) }}
        {{ form_help(contactForm.lastName) }}
    </div>

    <div class="button-container">
        <button type="submit" class="btn btn-general btn-general-secondary mt-3 mb-3 mx-auto">{{ button_text|trans }}</button>
        <a href="{{ path('contact_list') }}" class="btn btn-general btn-general-tertiary ">{% trans %}Annuler{% endtrans %}</a>
    </div>
</div>


{{ form_end(contactForm) }}